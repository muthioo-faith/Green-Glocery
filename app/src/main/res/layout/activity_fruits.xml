<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fruits">

    <ImageView
        android:id="@+id/imgbana"
        android:layout_width="195dp"
        android:layout_height="236dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/imgpawpaw"
        app:layout_constraintEnd_toStartOf="@+id/imgmango"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bana" />

    <ImageView
        android:id="@+id/imgmango"
        android:layout_width="197dp"
        android:layout_height="219dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/imgorange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgbana"
        app:srcCompat="@drawable/mango" />

    <ImageView
        android:id="@+id/imgorange"
        android:layout_width="174dp"
        android:layout_height="178dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/imgwater"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgpawpaw"
        app:srcCompat="@drawable/oranges" />

    <ImageView
        android:id="@+id/imgpawpaw"
        android:layout_width="167dp"
        android:layout_height="178dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/imgpine"
        app:layout_constraintEnd_toStartOf="@+id/imgorange"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pawpaw" />

    <ImageView
        android:id="@+id/imgwater"
        android:layout_width="199dp"
        android:layout_height="197dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgpine"
        app:srcCompat="@drawable/watemelon" />

    <ImageView
        android:id="@+id/imgpine"
        android:layout_width="191dp"
        android:layout_height="195dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgwater"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pineapple" />

    <TextView
        android:id="@+id/etbanana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        android:text="Banana"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imgpawpaw"
        app:layout_constraintEnd_toStartOf="@+id/etmango"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/etmango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        android:text="Mango"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imgorange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toEndOf="@+id/imgmango" />

    <TextView
        android:id="@+id/etpaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:text="Pawpaw"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/etorange"
        app:layout_constraintEnd_toStartOf="@+id/imgorange"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/etorange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="7dp"
        android:text="Orange"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imgwater"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etpaw" />

    <TextView
        android:id="@+id/etpine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Pineapple"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgwater"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/etwater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="7dp"
        android:text="Watermelon"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>